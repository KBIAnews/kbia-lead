---
layout: compress
---
[
	{% for page in site.pages %}
		{% unless page.url  contains "." %}
			{{page  | jsonify }},
		{% endunless %}
	{% endfor %}
	{% for post in site.posts %}
		{
			"title": "{{post.title}}",
			"date": "{{post.date}}",
			"slug": "{{post.slug}}",
			"permalink": "{{post.id}}",
			"excerpt": "{{post.excerpt| cgi_escape}}",
			{% if post.audio %}
				"audio": "{{post.audio}}",
			{% endif %}
			{% if post.lat %}
				"lat": "{{post.lat}}",
			{% endif %}
			{% if post.long %}
				"long": "{{post.long}}",
			{% endif %}
			"content": "{{post.content | cgi_escape}}"
		}	
		{% if forloop.last %}{% else %},{% endif %}
	{% endfor %}
]